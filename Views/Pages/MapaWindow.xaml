        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projeto_busca.Views.Pages"
        mc:Ignorable="d"
        Title="Efetuar Busca no Mapa" Height="850" Width="1282" PreviewKeyDown="EfetuarBusca">
