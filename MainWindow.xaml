<Window x:Class="projeto_busca.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projeto_busca"
        mc:Ignorable="d"
        Title="Algorítmos de Busca" Height="450" Width="800">

    <Grid>
        <StackPanel>
            <Line Height="150"></Line>
            <Button x:Name="btLargura" Width="150" Margin="10" Background="#FF008B9E" Foreground="White" BorderBrush="Black" Click="btLargura_Click" >Busca em Largura</Button>
            <Button x:Name="btProfundidade" Width="150" Margin="10" Background="#FF008B9E" Foreground="White" BorderBrush="Black" Click="btProfundidade_Click">Busca em Profundidade</Button>
            <Button x:Name="btGulosa" Width="150" Margin="10" Background="#FF008B9E" Foreground="White" BorderBrush="Black" Click="btGulosa_Click">Busca Gulosa</Button>
            <Button x:Name="btEstrela" Width="150" Margin="10" Background="#FF008B9E" Foreground="White" BorderBrush="Black" Click="btEstrela_Click">Busca A*</Button>

            <TextBox x:Name="ExceptionTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="100"/>
            
            <Frame x:Name="MainFrame" Grid.Row="1"/>
        </StackPanel>
    </Grid>
</Window>
