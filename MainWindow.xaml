<Window x:Class="projeto_busca.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:projeto_busca"
        mc:Ignorable="d"
        Title="Algorítmos de Busca" Height="450" Width="800">

    <Grid>
        <StackPanel>
            <Line Height="150"></Line>
            <Button x:Name="largura" Width="150" Margin="10" Background="#FF008B9E" Foreground="White" BorderBrush="Black" >Busca em Largura</Button>
            <Button x:Name="profundidade" Width="150" Margin="10" Background="#FF008B9E" Foreground="White" BorderBrush="Black">Busca em Profundidade</Button>
            <Button x:Name="gulosa" Width="150" Margin="10" Background="#FF008B9E" Foreground="White" BorderBrush="Black">Busca Gulosa</Button>
            <Button x:Name="estrela" Width="150" Margin="10" Background="#FF008B9E" Foreground="White" BorderBrush="Black">Busca A*</Button>
        </StackPanel>
    </Grid>
</Window>
